{
  "scss": {
    "src": "src/scss/**/*.scss",
    "dest": "docs/assets/css/"
  },
  "js": {
    "src": [
      "src/js/swiper.min.js",
      "src/js/modal.js",
      "src/js/desplegable.js",
      "src/js/cookies.js",
      "src/js/jquery-modal-video.js",
      "src/js/main.js"
    ],
    "dest": "docs/assets/js/"
  },
  "images": "docs/assets/images/**/*.{gif,jpg,png,svg}",
  "html_partials": {
    "src": "src/html/*.html",
    "base": "src/html/partials/",
    "dest": "docs/"
  },
  "html": ["src/**/*.html", "!node_modules/**/*.*"]
}
