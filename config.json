{
	"scss": {
		"src": "src/scss/**/*.scss",
		"dest": "docs/assets/css/"
	},
	"js": {
		"src": [
			"src/js/main.js",
            "src/js/swiper.min.js",
            "src/js/modal.js"
		],
		"dest": "docs/assets/js/"
	},
  "images": "docs/assets/images/**/*.{gif,jpg,png,svg}",
  "html_partials": {
    "src": "src/html/*.html",
    "base": "src/html/partials/",
		"dest": "docs/"
  },
	"html": [
    "src/**/*.html",
    "!node_modules/**/*.*"
  ]
}
